@model IEnumerable<Briet3.Models.Title>

    @{
    ViewBag.Title = "Home Page";

    }

<div class="container">
    <!--LOGO-->
    <div>
        
        <div class="row">
            <div class="col-md-4"></div>
                <div class="col-md-4">
                    <img src="~/Photos/AdaGreen.png" alt="BrietLogo" class="img-responsive text-center" />
                </div>
            <div class="col-md-4"></div>
        </div>

    </div>

    <!--BUTTONS-->

    <div class="row">

        <input type="image" src="~/Photos/movies-64.png" />
        <input type="image" src="~/Photos/tv-64.png" />
        <input type="image" src="~/Photos/school-64.png" />
        <input type="image" src="~/Photos/mickey-mouse-23-64.png" />
    </div>

    <!--TABLE-->

    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <td>#</td>
                <td>Name</td>
                <td>Status</td>
                <td>Download</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td><a href="/Home/EditTitle/@item.ID">@item.Name</a></td>
                <td><a href="/Home/EditTitle/@item.ID">
                    @if (item.Active == true)
                    {
                        <span>Subtitle Ready!</span>
                    }
                    else
                    {
                        <span>Help Translate Subtitles</span>
                    }
                </a></td>
                <td><a href="/Home/GetFile/@item.ID">Download</a></td>
                </tr>
           }
        </tbody>
    </table>

</div>
